<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="5dip">
    
    <TextView 
        android:id="@+id/text_view_polls_item_title"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/linear_layout_polls_item_layout1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        
        <TextView 
            android:id="@+id/text_view_polls_item_category"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="16sp" />
        
        <TextView 
            android:id="@+id/text_view_polls_item_published_at"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" 
            android:layout_weight="1"
            android:textSize="16sp"/>
                
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linear_layout_polls_item_layout2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        
        <TextView 
            android:id="@+id/text_view_polls_item_questions_count"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="16sp" />
        
        <TextView 
            android:id="@+id/text_view_polls_item_participations_count"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" 
            android:layout_weight="1"
            android:textSize="16sp"/>
                
    </LinearLayout>

</LinearLayout>